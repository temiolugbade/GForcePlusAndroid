<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/linearlayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection State"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_within_group">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="left"
                        android:background="@drawable/round_corners_bg"
                        android:layout_marginStart="@dimen/margin_within_group"
                        android:layout_marginTop="@dimen/margin_within_group">
                        <TextView
                            android:layout_width="@dimen/state_tv_width"
                            android:layout_height="wrap_content"
                            android:text="Left: "
                            android:gravity="right"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tv_device_state_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="disconnected"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="left"
                        android:background="@drawable/round_corners_bg"
                        android:layout_marginStart="@dimen/margin_within_group"
                        android:layout_marginTop="@dimen/margin_within_group"
                        android:layout_marginBottom="@dimen/margin_within_group">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:width="@dimen/state_tv_width"
                            android:gravity="right"
                            android:text="Right: "
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/tv_device_state_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="disconnected"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_itr_statement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Please explore how soft is the material?"
                    android:textSize="20dp"
                    android:background="@drawable/linearlayout"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <Button
                android:id="@+id/btn_start_notifying"
                android:layout_width="200dip"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:background="@drawable/start_round"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Start" />


            <!--    <Button-->
            <!--        android:id="@+id/btn_start"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:text="Test" />-->

            <!--    <TextView-->
            <!--        android:id="@+id/tv_countdown_start"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_gravity="center"-->
            <!--        android:text="Ready: 3s "-->
            <!--        android:textSize="30dp"/>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exploring Time: "
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_countdown_itr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0S"
                        android:layout_gravity="center"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quaternion_Left: " />

                    <TextView
                        android:id="@+id/tv_quaternion_l"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W:\nX:\nY:\nZ:\n" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quaternion_Right: " />

                    <TextView
                        android:id="@+id/tv_quaternion_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W:\nX:\nY:\nZ:\n" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <CheckBox
                        android:id="@+id/checkBox_ch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch1" />

                    <CheckBox
                        android:id="@+id/checkBox_ch2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch2" />

                    <CheckBox
                        android:id="@+id/checkBox_ch3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch3" />

                    <CheckBox
                        android:id="@+id/checkBox_ch4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch4" />

                    <CheckBox
                        android:id="@+id/checkBox_ch5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch5" />

                    <CheckBox
                        android:id="@+id/checkBox_ch6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch6" />

                    <CheckBox
                        android:id="@+id/checkBox_ch7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch7" />

                    <CheckBox
                        android:id="@+id/checkBox_ch8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ch8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <!--line graph view where we will
                       be displaying our data-->
                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/EMG_GraphView_left"
                        android:layout_width="match_parent"
                        android:layout_height="243dp" />

                    <!--line graph view where we will
                       be displaying our data-->
                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/EMG_GraphView_right"
                        android:layout_width="match_parent"
                        android:layout_height="238dp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="@dimen/next_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/next_margin_big"
                android:text="Finish" />

            <Button
                android:id="@+id/btn_reStart"
                android:layout_width="@dimen/next_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="RESTART" />

            <Button
                android:id="@+id/btn_reConnect"
                android:layout_width="@dimen/next_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="RECONNECT" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>

